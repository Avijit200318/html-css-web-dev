<% include ./partials/header.ejs %>
    <div class="settingsNav flex items-center font-light px-3 gap-8 mb-2 py-2">
        <a href="/profile">
            <h1 class="text-2xl"><i class="fa-solid fa-arrow-left"></i></h1>
        </a>
        <h1 class="text-[1.3rem] font-semibold">Settings and Privacy</h1>
    </div>
    <div class=" w-full px-4 py-2 mb-4">
        <div class="flex relative">
            <input class="w-full pr-2 pl-10 py-1 rounded-md text-white border-none outline-none bg-[#454545]"
                type="text" placeholder="Search">
            <h3 class="absolute top-[0.3rem] left-4 text-zinc-400"><i class="fa-solid fa-magnifying-glass"></i></h3>
        </div>
        <div class="flex justify-between my-4">
            <h3 class="text-zinc-300 font-semibold">Your account</h3>
            <h3><i class="fa-brands fa-meta"></i> Meta</h3>
        </div>
        <div class="allInfo">
            <div class="flex justify-around items-center">
                <h1 class="text-2xl"><i class="fa-regular fa-circle-user"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Accounts Center</h1>
                    <h3 class="text-[0.9rem]">Password, Security, personal details, ads</h3>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <p class="text-zinc-400 text-xs py-4 border-b-4 border-zinc-800">Manage your connected experieces and
                account settings across Meta technologys. <a class="text-white font-semibold" href="">Learn more</a></p>
        </div>

        <div class="pb-4 border-b-8 border-zinc-900">
            <p class="text-zinc-400 text-[0.8rem] py-4 font-semibold">How you use Instagram</p>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-2xl"><i class="ri-notification-2-line"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Notification</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center">
                <h1 class="text-2xl"><i class="fa-regular fa-clock"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Time spent</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
        </div>

        <div class="pb-4 border-b-8 border-zinc-900">
            <p class="text-zinc-400 text-[0.8rem] py-4 font-semibold">What you see</p>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-2xl"><i class="fa-regular fa-star"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Favorites</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-2xl"><i class="ri-notification-off-line"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Muted accounts</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-xl"><i class="fa-solid fa-photo-film"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Suggest content</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center">
                <h1 class="text-2xl"><i class="fa-regular fa-heart"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Like and share counts</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
        </div>

        <div class="pb-4 border-b-8 border-zinc-900">
            <p class="text-zinc-400 text-[0.8rem] py-4 font-semibold">More info and support</p>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-2xl"><i class="fa-solid fa-life-ring"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Help</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-2xl"><i class="fa-regular fa-user"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">Account Status</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
            <div class="flex justify-around items-center mb-4">
                <h1 class="text-xl"><i class="fa-solid fa-circle-info"></i></h1>
                <div class="w-[78%]">
                    <h1 class="text-white font-semibold">About</h1>
                </div>
                <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
            </div>
        </div>


        <div class="pb-4 border-b-8 border-zinc-900">
            <p class="text-zinc-400 text-[0.8rem] py-4 font-semibold">Login</p>
            <div class="flex justify-around items-center mb-4">
                <div class="w-full">
                    <a href="/login">
                        <h1 class="text-blue-600 font-md">Add account</h1>
                    </a>
                </div>
                <a href="/login">
                    <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
                </a>
            </div>
            <div class="flex justify-around items-center mb-4">
                <div class="w-full">
                    <a href="/logout">
                        <h1 class="text-red-500 font-md">Log out <%= user.username%></h1>
                    </a>
                </div>
                <a href="/logout">
                    <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
                </a>
            </div>
            <div class="flex justify-around items-center mb-4">
                <div class="w-full">
                    <a href="/logout">
                        <h1 class="text-red-500 font-md">Log out all accounts</h1>
                    </a>
                </div>
                <a href="/logout">
                    <h1 class="text-xl text-zinc-400"><i class="fa-solid fa-chevron-right"></i></h1>
                </a>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>