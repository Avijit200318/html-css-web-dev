<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[22rem] px-10 py-5 bg-white rounded-[20px] sm:w-96 md:w-[28rem] md:px-20 md:py-10 md:rounded-[30px] relative">
      <div class="w-full h-full flex justify-center mb-3">
        <div class="logo w-12 h-12 rounded-full bg-yellow-500 overflow-hidden">
          <img class="w-full h-full object-cover" src="./images/logo.png" alt="">
        </div>
      </div>
      <h1 class="text-2xl mb-10 tracking-tight capitalize font-semibold text-center leading-none">Welcome to Pinterest</h1>
      <% if(error.length){%>
        <p class="w-auto absolute text-red-700/75 text-sm left-14 top-28 mt-2 font-semibold text-center md:top-32 md:left-28 2xl:w-[18vw]"><%= error%></p>
        <% } %>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="User Name" autocomplete="off">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password" autocomplete="off">
        <a class="mt-2 inline-block font-semibold text-zinc-500" href="/forgetPassword">Forgot password ?</a>
        <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full transition-all duration-500 hover:bg-red-500 cursor-pointer" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-500 mt-5 text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.Notice all collection</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full transition-all duration-500" href="/register">Dont have an account ?</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>