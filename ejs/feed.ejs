<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-10 py-8">
        <div class="cards flex flex-wrap gap-6 mb-5 px-20">
            <% posts.forEach(function(ele) { %>
                <div class="card w-48">
                    <div class="w-full h-64 bg-sky-200 rounded-lg overflow-hidden">
                        <a href="/show/post/<%= ele._id%>">
                        <img src="/images/uploads/<%= ele.image %>" class="w-full h-full object-cover" alt="">
                    </a>
                    </div>
                    <a href="/show/post/<%= ele._id%>" class="mt-2 text-sm">
                        <%=ele.title %>
                    </a>
                    <h6 class="text-xs font-semibold opacity-50">@<%= ele.user.username %></h6>
                </div>
                <% }) %>
                
        </div>
    </div>
    <% include ./partials/footer.ejs %>