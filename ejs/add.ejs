<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen  px-10 py-5 ">
        <h1 class="text-2xl">Create a New Post</h1>
        <hr class="border-2 mt-3">
        <form action="/createPost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 cursor-pointer mt-3" name="postimage" type="file">
            <input class="text-black block w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text"   name="title" placeholder="Tittle" autocomplete="off">
            <textarea class="text-black block w-1/3 h-60 px-3 py-2 mt-2 border-2 rounded-md" type="text" placeholder="Description" name="description" id="" cols="30" rows="5" autocomplete="off"></textarea>
            <input class="block w-1/3 px-3 py-2 mt-2 bg-red-600 cursor-pointer rounded-md transition-all duration-500 hover:bg-red-500 cursor-pointer text-white" type="submit" value="Create Post">
        </form>
    </div>
