<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-5 px-4 relative">
      <img class="w-1/2" src="/images/logo2.png" alt="">
      <p class="error text-sm font-semibold text-red-600 absolute top-12"><%= error%></p>
      <form class="w-full" action="/register" method="post">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-black" type="text" placeholder="username" name="username" autocomplete="off">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-black" type="email" placeholder="email" name="email" autocomplete="off">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-black" type="text" placeholder="name" name="name" autocomplete="off">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-black" type="password" placeholder="password" name="password" autocomplete="off">
        <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2 cursor-pointer" type="submit" value="Make New Account">
      </form>
      <span>Already have an account ? <a href="/login" class="text-blue-500">Log In</a></span>
    </div>
  </div>
<% include ./partials/footer.ejs %>