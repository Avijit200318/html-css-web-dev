<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen px-10 py-8">
        <div class="cards flex flex-wrap gap-6 px-20">
            <% if(searchPost.length == 0){ %>
                <h1 class="text-5xl text-red-500 font-semibold">No Matches Found. Try a Different Search...<i class="fa-regular fa-circle-xmark"></i></h1>
            <% } %>
            <% searchPost.forEach(function(ele) { %>
                <div class="card w-48">
                    <div class="w-full h-80 bg-sky-200 rounded-lg overflow-hidden">
                        <a href="/show/post/<%= ele._id %>">
                        <img src="/images/uploads/<%= ele.image %>" class="w-full h-full object-cover" alt="">
                    </a>
                    </div>
                    <h5 class="mt-2 text-sm">
                        <%=ele.title %>
                    </h5>
                </div>
                <% }) %>
        </div>
    </div>
    <% include ./partials/footer.ejs %>