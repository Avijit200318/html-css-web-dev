<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-black text-white py-5">
    <div class="nav flex justify-between items-center px-4">
      <h3 class="text-lg">
        <%= user.username%>
      </h3>
      <div class="icons flex gap-5">
        <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
        <a href="/settings">
          <i class="text-[1.4rem] ri-menu-line"></i>
        </a>
      </div>
    </div>
    <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
      <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
        <% if(user.profileImage && user.profileImage.contentType && user.profileImage.data){%>
          <img src="data:<%= user.profileImage.contentType%>;base64,<%= user.profileImage.data.toString('base64')%>"
            class="w-full h-full object-cover" alt="">

          <%}%>

      </div>
      <div class="stats flex gap-5 items-center justify-between">
        <div class="flex flex-col items-center justify-center">
          <h3><%= user.posts.length%></h3>
          <h4>Posts</h4>
        </div>
        <a href="/followers/<%= user._id%>">
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.followers.length%></h3>
            <h4>Followers</h4>
          </div>
        </a>
        <a href="/following/<%= user._id%>">
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.following.length%></h3>
            <h4>Following</h4>
          </div>
        </a>
      </div>
    </div>
    <div class="dets px-6 mt-5">
      <h3 class="text-lg mb-1">
        <%= user.name%>
      </h3>
      <p class="text-xs tracking-tight opacity-50">
        <%= user.bio%>
      </p>
    </div>
    <div class="px-2 mt-5 flex justify-around">
      <a class="px-8 py-2 bg-zinc-800 text-sm rounded-md leading-none font-semibold hover:bg-zinc-700 transition-all duration-500" href="/edit">Edit Profile</a>
      <a class="px-6 py-2 bg-zinc-800 text-sm rounded-md leading-none font-semibold hover:bg-zinc-700 transition-all duration-500" href="">Share Profile</a>
      <a class="px-6 py-2 bg-zinc-800 text-sm rounded-md leading-none font-semibold hover:bg-zinc-700 transition-all duration-500" href=""><i class="ri-user-add-line"></i></a>
    </div>
    <div class="flex w-full mt-2 items-center">
      <h1 class="w-[33.3%] text-center text-xl border-b-2 pb-2 pt-4"><i class="fa-solid fa-table-cells"></i></h1>
      <h1 class="w-[33.3%] text-center text-xl pb-2 pt-4"><i class="fa-regular fa-square-caret-right"></i></h1>
      <h1 class="w-[33.3%] text-center text-sm pb-2 pt-4"><p><i class="fa-regular fa-user border-[3px] p-[2px]"></i></p></h1>
    </div>
    <div class="posts w-full flex gap-1 py-2 flex-wrap">
      <% user.posts.forEach(function(ele) { %>
        <div class="post w-[32.5%] h-32 bg-sky-100 overflow-hidden">
          <a href="/post/find/<%= ele._id%>">
            <img src="data:<%= ele.picture.contentType%>;base64,<%= ele.picture.data.toString('base64')%>" alt=""
              class="w-full h-full object-cover">
          </a>
        </div>
        <% }) %>

    </div>
  </div>
  <% include ./partials/footer.ejs %>